<% include ./partials/header%>
<di class="container">
    <div class="row">
        <h1 style="text-align:center">Edit contact</h1>
        
         <div style="width:30%; margin:25px auto">
             <form action="/directorys/<%= directory_id%>/contacts/<%= contact._id%>?_method=PUT" method="POST">
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="contact" name="contact[name]" value="<%=contact.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="number XXX-XXX-XXXX" name="contact[number]" value="<%=contact.number%>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">back</a>
         </div>
    </div>
</div>
<% include ./partials/footer%>


