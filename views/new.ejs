<% include ./partials/header%>
<di class="container">
    <div class="row">
        <h1 style="text-align:center">new contact for <%= directory.submitter.username%></h1>
        
         <div style="width:30%; margin:25px auto">
             <form action="/directorys/<%= directory._id%>/contacts" method="POST">
                 <div class="form-group">
                    <input class="form-control" type="text" placeholder="contact" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="number XXX-XXX-XXXX" name="number">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-large btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">back</a>
         </div>
    </div>
</div>
<% include ./partials/footer%>


